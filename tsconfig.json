{
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "esnext",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "experimentalDecorators": true,
    "removeComments": true,
    "composite": true,
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": "./",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "paths": {
      "gray-matter": [
        "./typings/gray-matter" 
      ],
      "section-matter": [
        "./typings/section-matter/index.d.ts"
      ],
      "remark": [
        "./typings/remark/index.d.ts"
      ],
      "remark-react": [
        "./typings/remark-react/index.d.ts"
      ],
      "section-matter*": [
        "./typings/section-matter*"
      ]
    },
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "jest"
  ],
  "ordered-imports": [
    true,
    {
      "import-sources-order": "any",
      "named-imports-order": "case-insensitive"
    }
  ]
}